  - name: copy war file
    copy:
      src: "{{ war_path }}/{{ war_name }}"
      dest: "{{ dest_path }}"

  - name: unzip war file
    unarchive:
      src: "{{ dest_path }}/{{ war_name }}"
      dest: "{{ dest_path }}"
      remote_src: yes
      mode: 0755
      owner: tomcat
      group: tomcat7
    notify:
      - Restart_tomcat
   
